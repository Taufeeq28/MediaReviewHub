@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section text-center text-light" style="background: url('/path/to/your/hero-image.jpg') no-repeat center center/cover; height: 100vh; position: relative;">
        <div class="hero-overlay" style="background: rgba(0, 0, 0, 0.6); position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
            <div class="hero-content d-flex flex-column justify-content-center align-items-center" style="height: 100%; z-index: 2;">
                <h1 style="font-size: 4rem; color: white;">Welcome to Media Review Hub</h1>
                <p style="font-size: 1.5rem; color: white;">Explore and share your thoughts on your favorite movies, books, music, and games!</p>
                <a href="/Reviews" class="btn btn-primary btn-lg mt-3" style="padding: 10px 30px; font-size: 1.2rem;">Explore Reviews</a>
            </div>
        </div>
    </div>

    <!-- Introduction Section -->
    <div class="container py-5 text-center">
        <h2 style="color: #007bff;">Discover a World of Media Reviews</h2>
        <p style="font-size: 1.2rem;">We offer honest reviews and opinions on all forms of media including books, movies, music, and games. Whether you're looking for recommendations or want to contribute your own review, you're in the right place!</p>
        <a href="/Reviews/Create" class="btn btn-outline-primary btn-lg mt-3" style="padding: 10px 30px; font-size: 1.2rem;">Share Your Review</a>
    </div>

    <!-- Featured Reviews Section -->
    <div class="container py-5">
        <h3 class="text-center" style="color: #007bff;">Featured Reviews</h3>
        <div class="row">
            <!-- Review 1 -->
            <div class="col-md-4">
                <div class="card" style="margin-top: 20px;">
                    <img src="/path/to/movie-image1.jpg" class="card-img-top" alt="Movie Cover" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Inception</h5>
                        <p class="card-text">A mind-bending thriller with stunning visuals.</p>
                        <a href="/Reviews/Details?reviewId=1" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>

            <!-- Review 2 -->
            <div class="col-md-4">
                <div class="card" style="margin-top: 20px;">
                    <img src="/path/to/book-image2.jpg" class="card-img-top" alt="Book Cover" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Rich Dad Poor Dad</h5>
                        <p class="card-text">An inspiring look at personal finance and success.</p>
                        <a href="/Reviews/Details?reviewId=2" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>

            <!-- Review 3 -->
            <div class="col-md-4">
                <div class="card" style="margin-top: 20px;">
                    <img src="/path/to/game-image3.jpg" class="card-img-top" alt="Game Cover" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">God of War</h5>
                        <p class="card-text">An epic adventure game with stunning combat and story.</p>
                        <a href="/Reviews/Details?reviewId=3" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    
</div>