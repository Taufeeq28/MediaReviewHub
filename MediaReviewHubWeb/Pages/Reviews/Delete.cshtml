@page
@model MediaReviewHubWeb.Pages.Reviews.DeleteModel

<form method="post" id="deleteForm">
    <div class="border p-4 mt-4 bg-light" style="max-width: 700px; margin: 0 auto; border-radius: 8px;">
        <div class="pb-3 text-center">
            <h2 class="text-primary">Delete Review</h2>
            <hr />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.Title" class="fw-bold"></label>
            <input asp-for="Review.Title" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.Category" class="fw-bold"></label>
            <input asp-for="Review.Category" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.ReviewText" class="fw-bold"></label>
            <textarea asp-for="Review.ReviewText" class="form-control" style="height: 120px;" disabled></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.Rating" class="fw-bold"></label>
            <input asp-for="Review.Rating" type="number" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.DateReviewed" class="fw-bold"></label>
            <input asp-for="Review.DateReviewed" type="date" class="form-control" disabled />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-danger" style="width: 150px;" id="deleteButton">Delete</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById('deleteButton').addEventListener('click', function (event) {
            // Prevent form submission
            event.preventDefault();

            // Show confirmation popup
            var confirmation = confirm("Are you sure you want to delete this review?");

            // If confirmed, submit the form
            if (confirmation) {
                document.getElementById('deleteForm').submit();
            }
        });
    </script>
}
