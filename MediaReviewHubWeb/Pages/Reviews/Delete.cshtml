@page
@model MediaReviewHubWeb.Pages.Reviews.DeleteModel

<form method="post" id="deleteForm">
    <div class="border p-4 mt-4 bg-light" style="max-width: 700px; margin: 0 auto; border-radius: 8px;">
        <div class="pb-3 text-center">
            <h2 style="color: black;">Delete Review</h2> <!-- Changed color to black -->
            <hr />
        </div>

        <div class="form-group mb-3">
            <label  class="fw-bold">Title:</label>
            <input asp-for="Review.Title" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Category:</label>
            <input asp-for="Review.Category" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Text:</label>
            <textarea asp-for="Review.ReviewText" class="form-control" style="height: 120px;" disabled></textarea>
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Rating(1-5):</label>
            <input asp-for="Review.Rating" type="number" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Date Reviewed:</label>
            <input asp-for="Review.DateReviewed" type="date" class="form-control" disabled />
        </div>

        <div class="text-center d-flex justify-content-between">
            <!-- Back Button -->
            <a href="/Reviews/Index" class="btn btn-secondary" style="width: 150px;">Back</a>
            <!-- Delete Button -->
            <button type="button" class="btn btn-danger" style="width: 150px;" id="deleteButton">Delete</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <!-- SweetAlert2 Library -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById('deleteButton').addEventListener('click', function (event) {
            // Prevent form submission
            event.preventDefault();

            // Use SweetAlert2 for confirmation
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If confirmed, submit the form
                    document.getElementById('deleteForm').submit();
                }
            });
        });
    </script>
}
