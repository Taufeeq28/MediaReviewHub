@page
@model MediaReviewHubWeb.Pages.Reviews.EditModel

<form method="post">
    <div class="border p-4 mt-4 bg-light" style="max-width: 700px; margin: 0 auto; border-radius: 8px;">
        <div class="pb-3 text-center">
            <h2 class="text-primary">Edit Review</h2>
            <hr />
        </div>

        <input hidden asp-for="Review.ReviewID" />

        <div class="form-group mb-3">
            <label asp-for="Review.Title" class="fw-bold"></label>
            <input asp-for="Review.Title" class="form-control" />
            <span asp-validation-for="Review.Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.Category" class="fw-bold"></label>
            <input asp-for="Review.Category" class="form-control" />
            <span asp-validation-for="Review.Category" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.ReviewText" class="fw-bold"></label>
            <textarea asp-for="Review.ReviewText" class="form-control" style="height: 120px;"></textarea>
            <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.Rating" class="fw-bold"></label>
            <input asp-for="Review.Rating" type="number" class="form-control" />
            <span asp-validation-for="Review.Rating" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Review.DateReviewed" class="fw-bold"></label>
            <input asp-for="Review.DateReviewed" type="date" class="form-control" />
            <span asp-validation-for="Review.DateReviewed" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="width: 150px;">Update</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
