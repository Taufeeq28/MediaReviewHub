@page
@model MediaReviewHubWeb.Pages.Reviews.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Review List</h2>
        </div>
        <div class="col-6 d-flex justify-content-end ">
            <a asp-page="createreview" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Add New Review
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th style="width: 10%;">Title</th>
                <th style="width: 10%;">Category</th>
                <th style="width: 5%;">Rating</th>
                <th style="width: 40%;">Review</th>
                <th style="width: 25%;">Date Reviewed</th>
                <th style="width: 10%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Reviews)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Category</td>
                    <td>@obj.Rating</td>
                    <td>@obj.ReviewText</td>
                    <td>@obj.DateReviewed.ToString("MM/dd/yyyy")</td>
                    <td style="white-space: nowrap; text-align: center;">
                        <a asp-page="Edit" asp-route-id="@obj.ReviewID" class="btn btn-primary btn-sm" style="margin-right: 5px;"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-page="Delete" asp-route-id="@obj.ReviewID" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"> </i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
